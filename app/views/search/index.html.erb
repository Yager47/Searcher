<div class="row jumbotron">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1 class="text-center">Searcher</h1>
    
    <div class="col-md-offset-2">
      <%= form_tag search_index_path, :method => 'get' do %>
        <%= text_field_tag :title,  params[:title],  :class => "form-control", :placeholder => "Title (Book/Movie)" %>
        <%= text_field_tag :weight, params[:weight], :class => "form-control", :placeholder => "Weight/Runtime" %>
        <%= text_field_tag :price,  params[:price],  :class => "form-control", :placeholder => "Price" %>
        <%= submit_tag "Find", :class => "btn btn-default" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>


<div class="row" style="background-color:#F8F8FF;">
  <div class="center-block" style="width:600px;">
    <h3 class="text-center">Search results</h3>

    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#books">Books</a></li>
      <li><a data-toggle="tab" href="#movies">Movies</a></li>
    </ul>
    
    <ul class="list-group">
      <div class="tab-content">
        
        <div id="books" class="tab-pane fade in active">
          <% unless @books.blank? %>
            <% @books.each do |book| %>
              <li class="list-group-item">
                "<%= book.title %>" 
                <small class="text-right">by <%= book.author %></small>
              </li>
            <% end %>
          <% end %>
        </div>

        <div id="movies" class="tab-pane fade">
          <% unless @movies.blank? %>
            <% @movies.each do |movie| %>
              <li class="list-group-item">
                "<%= movie.title %>"  
                <small class="text-right"><%= movie.runtime %> min</small>
              </li>
            <% end %>
          <% end %>
        </div>
      
      </div>
    </ul>
  </div>
</div>
